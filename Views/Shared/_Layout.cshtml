

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Study Buddy</title>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/typed.js/2.0.11/typed.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/waypoints/4.0.1/jquery.waypoints.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous" />
    <script src="~/Scripts/Script.js"></script>
    <link href="~/Content/TablesStylesheeet.css" rel="stylesheet" />
    @Styles.Render("~/Content/Style.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/Script.js")


    <style>
        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            padding: 8px 12px;
            z-index: 1;
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }
    </style>

</head>

<body class="body">
    <div class=" container-fluid">
        <div style="background-color : #242d3c; padding: 0.01%;">
            <nav class="navbar " style="position:fixed">
                <div class="max-width">
                    <div class="logo"> <img src="~/images/logo.png" alt="logo" height="70">  </div>

                    <ul class="menu">


                        @if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Dashboard", "landingA", "Students")</li>
                            <li>@Html.ActionLink("Tutor Management", "IndexA", "Tutors")</li>
                            <li>
                                <div class="dropdown">
                                    <span><a href="#">Role Management</a></span>
                                    <div class="dropdown-content">
                                        <p> <a href=@Url.Action( "Index", "Role")>View Role</a></p>
                                        <p> <a href=@Url.Action("Create", "Role")>Create Role</a></p>
                                        <p> <a href=@Url.Action("RegisterRole", "Account")>Assign Role</a></p>




                                    </div>
                                </div>
                            </li>

                        }
                        else if (User.IsInRole("Student"))
                        {
                            <li>@Html.ActionLink("Dashboard", "landingS", "Students")</li>
                            <li>@Html.ActionLink("Tut Booking", "BookingIndex", "Students")</li>
                            <li>@Html.ActionLink("Check Status", "Index", "Students")</li>
                            <li>
                                <div class="dropdown">
                                    <span><a href="#">Tutors</a></span>
                                    <div class="dropdown-content">
                                        @*<p> <a href=@Url.Action("Create", "Students")>Book Tutorial</a></p>*@
                                        <p> <a href=@Url.Action("ListofTutors", "Tutors")>Available Tutors</a></p>
                                        @*<p> <a href=@Url.Action("Index", "Directions")>Available Tutors</a></p>*@
                                    </div>
                                </div>
                            </li>
                            <li>@Html.ActionLink("Notice Forum", "Index", "NoticeBoard")</li>

                        }
                        else if (User.IsInRole("Tutor"))
                        {
                            <li>@Html.ActionLink("Dashboard", "landingT", "Tutors")</li>
                            <li>@Html.ActionLink("My Status", "Index", "Tutors")</li>
                            <li>@Html.ActionLink("Notice Forum", "Index", "NoticeBoard")</li>
                            <li>
                                <div class="dropdown">
                                    <span><a href="#">Manage Students</a></span>
                                    <div class="dropdown-content">
                                        <p> <a href=@Url.Action("ManageStudent", "Students")>Manage Students</a></p>
                                        <p> <a href=@Url.Action("Create", "Directions")>Send Directions</a></p>
                                        <p> <a href=@Url.Action("TutorDirections", "Directions")>View Directions</a></p>
                                    </div>
                                </div>
                            </li>


                        }
                        else
                        {
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            <li>@Html.ActionLink("Become A Tutor", "Create", "Tutors")</li>
                        }



                        @Html.Partial("_LoginPartial")
                    </ul>
                    <div class="menu-btn">
                        <i class="fas fa-bars"></i>
                    </div>

                </div>
            </nav>

        </div>


        @RenderBody()
        <!-- footer section start -->
        <footer style=" margin-top:0px">
            <div class="row" align="center">
                <div class="column">
                    <br>
                    <h2 align="center" style="color:#F76500; font-size: 20px;text-weight:bolder">Reach Us Here</h2>
                    <br />
                    <hr width="70%" class="hrformat"></hr>
                    <br />
                    <ul style="color:white" class="no-bullets">
                        <li> Visit us </li>
                        <li>@Html.ActionLink("Contact us", "Contact", "Home", new { @style = "text-decoration:none;color:white;" })</li>
                        <li> Emergency contacts</li>
                        <li> Public infornation</li>
                    </ul>
                    <br>
                </div>
                <div class="column">
                    <p>
                        <br>

                        <h2 align="center" style="color:#F76500; font-size: 20px;text-weight:bolder">Our Specialities</h2>
                        <br />
                        <hr width="70%" class="hrformat"></hr>
                        <br />
                        <ul style="color:white" class="no-bullets">
                            <li>Becoming A Tutor</li>
                            <li>Fast Paced Learning</li>
                            <li>Physical Contact Tuts</li>
                            <li>Online Tuts</li>
                        </ul>
                        <br>
                </div>
                <div class="column">
                    <br>

                    <h2 align="center" style="color:#F76500; font-size: 20px;text-weight:bolder">Quick Links</h2>
                    <br />
                    <hr width="70%" class="hrformat"></hr>
                    <br />
                    <ul style="color:white" class="no-bullets">
                        <li>Moodle</li>
                        <li>Student Portal</li>
                        <li>@Html.ActionLink("Weather Forecast", "Weather", "Home", new { @style = "text-decoration:none;color:white;" })</li>
                        <li>@Html.ActionLink("Become A Tutor", "Create", "Tutors", new { @style = "text-decoration:none;color:white;" })</li>
                    </ul>
                    <br>
                </div>
                <div class="column">
                    <p>
                        <br>

                        <h2 align="center" style="color:#F76500; font-size: 20px;text-weight:bolder">Social Media</h2>
                        <br />
                        <hr width="70%" class="hrformat"></hr>
                        <br />
                        <ul style="color:white" class="no-bullets">
                            <li>Twitter</li>
                            <li>Facebook</li>
                            <li>Instagram</li>
                            <li>Youtube</li>
                        </ul>
                        <br>
                </div>

                <div class="column">

                </div>
            </div>

            <span>Created By <a href="#">United Coders</a> | <span class="far fa-copyright"></span> 2022 All rights reserved.</span>
        </footer>

        <script src="script.js"></script>
    </div>

</body>
</html>
