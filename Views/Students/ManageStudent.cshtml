@model IEnumerable<Study_Buddy.Models.Student>

@{
    ViewBag.Title = "ManageStudent";
}


<center class="centralContent">
    <br />
    <h4>Manage Your Students</h4>
    <br />
    <table class="fulltable">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Stud_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Study_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pur_booking)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Level_Of_Study)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meeting_Place)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Module)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Faculty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Stud_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Study_Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pur_booking)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Level_Of_Study)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Meeting_Place)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Module)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Faculty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td>
                    <a href="@Url.Action(actionName: "RejectStudent", controllerName: "Students", routeValues: new { id = item.Stud_Id })">Reject</a>
                    <a href="@Url.Action(actionName: "ApproveStudent", controllerName: "Students", routeValues: new { id = item.Stud_Id })">Approve </a>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Stud_Id })
                </td>
            </tr>
        }

    </table>
</center>
<div style="padding-top:10em;">

</div>

