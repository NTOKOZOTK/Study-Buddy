@model IEnumerable<Study_Buddy.Models.Tutor>

@{
    ViewBag.Title = "IndexA";
}
<head>
    <link href="~/Content/Style.css" rel="stylesheet" />
</head>

<center class="centralContent" style="padding-bottom:11em;">
    <br />
    <h4>Manage Tutors</h4>
    <br />
    <table class="fulltable">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tutor_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Level_Of_Study)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Level_2_tut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Module)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tutor_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Level_Of_Study)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Level_2_tut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Module)
                </td>

                <td>
                    @Html.ActionLink("Download Transcipt", "Download", new { id = item.Tutor_Id })
                    <a href="@Url.Action(actionName: "RejectTutor", controllerName: "Tutors", routeValues: new { id = item.Tutor_Id })">| Reject |</a>
                    <a href="@Url.Action(actionName: "ApproveTutor", controllerName: "Tutors", routeValues: new { id = item.Tutor_Id })"> Approve |</a>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Tutor_Id })
                </td>
            </tr>
        }

    </table>
</center>
<div style="padding-bottom:16em;">

</div>
