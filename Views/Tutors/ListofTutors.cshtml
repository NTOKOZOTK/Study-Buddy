@model IEnumerable<Study_Buddy.Models.Tutor>

@{
    ViewBag.Title = "ListofTutors";
}




<center class="centralContent">
    <br />
    <h4>List of Tutors</h4>
    <br />
    <table class="fulltable">

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tutor_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Availability)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.availableTime)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Level_2_tut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Faculty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Module)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tutor_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Availability)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.availableTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Level_2_tut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Faculty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Module)
                </td>
                <td>

                    @if (item.Availability == "Available")
                    {
                        
                        <a href="@Url.Action(actionName: "Create", controllerName: "Students", routeValues: new { id = item.Tutor_Id})">Book Me </a>
                    }
                    else
                    {

                    }
                </td>

            </tr>

        }

    </table>
</center>
<div style="padding-bottom:16em;">

</div>
