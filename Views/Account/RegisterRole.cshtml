@model  Study_Buddy.Models.RegisterViewModel
@{
    ViewBag.Title = "RegisterRole";
}
<div>
    <center class="centralContent">
        <h2>Assign Role</h2>
        @using (Html.BeginForm("RegisterRole", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div style="padding-bottom: 10em;">
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.Label("Select User", new { @class = "control-label" })
                    <div>
                        @Html.DropDownList("UserName")
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Select Role", new { @class = "control-label" })
                    <div>
                        @Html.DropDownList("Name")
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        <input type="submit" class="btn btn-default" value="Assign Role" />
                    </div>
                </div>
            </div>
        }


    </center>
</div>

